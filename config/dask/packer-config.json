{
    "variables": {
         "project_id": "{{env `GCP_PROJECT`}}",
         "region": "{{env `GCP_REGION`}}",
         "zone": "{{env `GCP_ZONE`}}"
     },
    "builders": [ 
        {
           "type": "googlecompute",
           "project_id": "{{user `project_id`}}",
           "machine_type": "n1-standard-2",
           "ssh_username": "packer",
           "source_image": "ubuntu-minimal-1804-bionic-v20201014", 
           "region": "{{user `region`}}",
           "zone": "{{user `zone`}}",
           "image_description": "UKB GWAS Dask Image",
           "image_name": "ukb-gwas-pipeline-nealelab-dask-{{timestamp}}",
           "image_licenses": ["projects/vm-options/global/licenses/enable-vmx"],
           "disk_size": 32,  
           "metadata": {
              "user-data": "/home/eczech/repos/ukb-gwas-pipeline-nealelab/config/dask/cloud-init-config.yaml"
           }
        }
     ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "echo 'Waiting for cloud-init'; while [ ! -f /var/lib/cloud/instance/boot-finished ]; do sleep 1; done; echo 'Done'"
            ]
        }
    ]
}